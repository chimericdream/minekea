{
    "schemaVersion": 1,
    "id": "minekea",
    "version": "${version}",
    "name": "Minekea",
    "description": "Simple, functional, decorative blocks for all your building and storage needs (some assembly required)",
    "authors": [
        "chimericdream"
    ],
    "contact": {
        "homepage": "https://fabricmc.net/",
        "sources": "https://github.com/chimericdream/minekea-fabric"
    },
    "license": "MIT",
    "icon": "assets/minekea/icon.png",
    "environment": "*",
    "entrypoints": {
        "fabric-datagen": [
            "com.chimericdream.minekea.fabric.data.ModDataGenerator"
        ],
        "main": [
            "com.chimericdream.minekea.fabric.MinekeaFabric"
        ],
        "client": [
            "com.chimericdream.minekea.fabric.client.MinekeaFabricClient"
        ]
    },
    "mixins": [
        "minekea.mixins.json"
    ],
    "accessWidener": "minekea.accesswidener",
    "depends": {
        "fabricloader": ">=0.15.0",
